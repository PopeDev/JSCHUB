@using MudBlazor

<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6" Color="Color.Error">
            <MudIcon Icon="@Icons.Material.Filled.DeleteForever" Class="mr-2" />
            Confirmar eliminación
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudAlert Severity="Severity.Warning" Class="mb-4">
            Esta acción no se puede deshacer.
        </MudAlert>

        <MudText Typo="Typo.body1">
            ¿Estás seguro de que deseas eliminar
            @if (IsDirectory)
            {
                <strong>la carpeta</strong>
            }
            else
            {
                <strong>el archivo</strong>
            }
            <MudChip T="string" Size="Size.Small" Color="Color.Default">@ItemName</MudChip>?
        </MudText>

        @if (IsDirectory)
        {
            <MudCheckBox @bind-Value="_recursive"
                         Label="Eliminar todo el contenido (recursivo)"
                         Color="Color.Error"
                         Class="mt-4" />
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Text">Cancelar</MudButton>
        <MudButton OnClick="Submit"
                   Color="Color.Error"
                   Variant="Variant.Filled">
            Eliminar
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter]
    public string ItemName { get; set; } = string.Empty;

    [Parameter]
    public bool IsDirectory { get; set; }

    private bool _recursive;

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_recursive));
    }

    private void Cancel() => MudDialog.Cancel();
}
