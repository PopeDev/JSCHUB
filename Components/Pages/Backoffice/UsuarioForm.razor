@page "/backoffice/usuarios/new"
@page "/backoffice/usuarios/{Id:guid}/edit"
@using JSCHUB.Application.DTOs
@using JSCHUB.Application.Interfaces
@rendermode InteractiveServer

<PageTitle>@(_isNew ? "Nuevo Usuario" : "Editar Usuario") - JSCHUB</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-4">
    <MudPaper Class="pa-4">
        <MudText Typo="Typo.h5" Class="mb-4">
            <MudIcon Icon="@(_isNew ? Icons.Material.Filled.PersonAdd : Icons.Material.Filled.Edit)" Class="mr-2" />
            @(_isNew ? "Nuevo Usuario" : "Editar Usuario")
        </MudText>

        @if (_loading)
        {
            <MudProgressLinear Indeterminate="true" Color="Color.Primary" />
        }
        else
        {
            <MudForm @ref="_form" @bind-IsValid="_formValid">
                <MudTextField @bind-Value="_nombre" Label="Nombre" Required="true"
                              RequiredError="El nombre es obligatorio"
                              MaxLength="100" Class="mb-3" />

                <MudTextField @bind-Value="_email" Label="Email" InputType="InputType.Email"
                              MaxLength="150" Class="mb-3" />

                <MudTextField @bind-Value="_telefono" Label="TelÃ©fono"
                              MaxLength="20" Class="mb-3" />

                @if (!_isNew)
                {
                    <MudSwitch @bind-Value="_activo" Label="Activo" Color="Color.Success" Class="mb-4" />
                }

                <div class="d-flex gap-2 mt-4">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary"
                               OnClick="SaveAsync" Disabled="@(!_formValid || _saving)">
                        @if (_saving)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                        }
                        Guardar
                    </MudButton>
                    <MudButton Variant="Variant.Outlined" Href="/backoffice/usuarios">
                        Cancelar
                    </MudButton>
                </div>
            </MudForm>
        }
    </MudPaper>
</MudContainer>

@code {
    [Parameter] public Guid? Id { get; set; }

    [Inject] private IUsuarioService UsuarioService { get; set; } = default!;
    [Inject] private NavigationManager Navigation { get; set; } = default!;
    [Inject] private ISnackbar Snackbar { get; set; } = default!;

    private MudForm _form = default!;
    private bool _loading = true;
    private bool _saving;
    private bool _formValid;
    private bool _isNew => !Id.HasValue;

    private string _nombre = string.Empty;
    private string? _email;
    private string? _telefono;
    private bool _activo = true;

    protected override async Task OnInitializedAsync()
    {
        if (!_isNew)
        {
            var usuario = await UsuarioService.GetByIdAsync(Id!.Value);
            if (usuario == null)
            {
                Snackbar.Add("Usuario no encontrado", MudBlazor.Severity.Error);
                Navigation.NavigateTo("/backoffice/usuarios");
                return;
            }

            _nombre = usuario.Nombre;
            _email = usuario.Email;
            _telefono = usuario.Telefono;
            _activo = usuario.Activo;
        }
        _loading = false;
    }

    private async Task SaveAsync()
    {
        await _form.Validate();
        if (!_formValid) return;

        _saving = true;
        try
        {
            if (_isNew)
            {
                var dto = new CreateUsuarioDto(_nombre, _email, _telefono);
                await UsuarioService.CreateAsync(dto);
                Snackbar.Add("Usuario creado", MudBlazor.Severity.Success);
            }
            else
            {
                var dto = new UpdateUsuarioDto(_nombre, _email, _telefono, _activo);
                await UsuarioService.UpdateAsync(Id!.Value, dto);
                Snackbar.Add("Usuario actualizado", MudBlazor.Severity.Success);
            }

            Navigation.NavigateTo("/backoffice/usuarios");
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", MudBlazor.Severity.Error);
        }
        finally
        {
            _saving = false;
        }
    }
}
